<%- include('../templates/header') %>


<div class="bgd">

    <div class="reset-form">

    <div class="reset-header">
        <h2>Change Password</h2>
    </div>

    <form  action="/reset_password" method="POST">
        <div class="change-box">
                
                <div class="reset-email">
                    <div class="email-label">
                        <label>Enter your username:</label>
                    </div>
                    <div class="box-0 selected">
                        <input class="form-one" id="user-email" name="username" value="" 
                            placeholder="Enter your username" type="email">
                    </div>
                </div>
                <br />

                <div class="old-password">
                    <div class="old-label">
                        <label>Old Password:</label>
                    </div>
                    <div class="box-1 selected">
                        <input class="form-one" id="form-one" name="oldpassword" value=""
                            placeholder="Enter your old password" type="password">
                    </div>
                </div>
                <br />

                <div class="new-password">
                    <div class="new-label-one">
                        <label>New Password:</label>
                    </div>
                    <div class="box-2 selected">
                        <input class="form-one" id="new-password-one" name="newpassword" value=""
                            placeholder="Enter your new password" type="password">
                    </div>
                </div>
                <br />

                <div class="confirm-password">
                    <div class="new-label-two">
                        <label>Confirm Password:</label>
                    </div>
                    <div class="box-three selected">
                        <input class="form-one" id="confirm-password" name="confirm_password" value=""
                            placeholder="Re-enter your new password" type="password">
                    </div>
                </div>


                <div class="submit-button">
                    <input type="submit" name="submit" value="Save Changes" class="save-btn"> 
                    <input type="reset" name="reset" value="Clear" class="clear-btn">
                </div>

        </div>
        </div>
    </form>

</div>



<!-- End of page -->
<%- include('../templates/footer') %>